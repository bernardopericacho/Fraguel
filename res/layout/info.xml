<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/info_imagen"
		android:paddingLeft="5dip" android:paddingTop="5dip" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/info_texto" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textStyle="italic"
			android:gravity="left" />

	</ScrollView>



</LinearLayout>
